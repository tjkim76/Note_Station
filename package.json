{
  "name": "note-station-react",
  "version": "1.0.0",
  "description": "Evernote-style note taking station with React",
  "private": true,
  "type": "module",
  "dependencies": {
    "cookie": "^1.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "highlight.js": "^11.9.0",
    "JSONStream": "^1.3.5",
    "jsonwebtoken": "^9.0.3",
    "katex": "^0.16.28",
    "lucide-react": "^0.263.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "pm2": "^5.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^2.0.2",
    "react-window": "^1.8.10",
    "sql.js": "^1.8.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.0.2",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "@capacitor/core": "^6.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "vite": "^7.3.1",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/android": "^6.0.0",
    "@capacitor/ios": "^6.0.0",
    "vite-plugin-mkcert": "^1.17.9",
    "vite-plugin-progress": "^0.0.7",
    "vite-plugin-pwa": "^1.2.0"
  },
  "scripts": {
    "dev": "concurrently -k -n \"SERVER,WEB\" -c \"blue,green\" \"npm run note-server\" \"vite\"",
    "build": "vite build",
    "preview": "vite preview",
    "note-server": "node server/note-server.js",
    "start": "npm run dev",
    "cleanup-images": "node server/cleanup-images.js",
    "service": "npm run build && concurrently -k -n \"SERVER,WEB\" -c \"blue,green\" \"npm run note-server\" \"npm run preview\"",
    "daemon:start": "npm run build && pm2 start ecosystem.config.cjs",
    "daemon:stop": "pm2 stop ecosystem.config.cjs",
    "daemon:restart": "pm2 restart ecosystem.config.cjs",
    "daemon:delete": "pm2 delete ecosystem.config.cjs",
    "daemon:log": "pm2 logs",
    "daemon:status": "pm2 list",
    "daemon:info": "pm2 show note-station-server:4000 && pm2 show note-station-web:3000",
    "mobile:init": "cap init",
    "mobile:sync": "npm run build && cap sync",
    "mobile:android": "cap open android",
    "mobile:ios": "cap open ios"
  },
  "overrides": {
    "vite-plugin-pwa": {
      "vite": "$vite"
    }
  }
}
