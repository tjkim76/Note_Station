{
  "manifest_version": 3,
  "name": "React Note App",
  "version": "1.0.0",
  "description": "Evernote-style note taking app",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; connect-src 'self' https://api.openai.com;"
  }
}